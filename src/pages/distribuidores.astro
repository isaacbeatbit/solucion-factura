      // Slider functionality
      document.addEventListener("DOMContentLoaded", function () {
        const slider = document.getElementById("foliosRange");
        const foliosAmount = document.getElementById("foliosAmount");
        const pricePerFolio = document.getElementById("pricePerFolio");
        const resultFolios = document.getElementById("resultFolios");
        const resultPrice = document.getElementById("resultPrice");

        function updateCalculation() {
          const folios = parseInt(slider.value);
          let pricePerUnit = 1.9;

          // Precio escalonado basado en los datos exactos proporcionados
          if (folios >= 57000) pricePerUnit = 0.44;
