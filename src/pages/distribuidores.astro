          else if (folios >= 20000) pricePerUnit = 0.47;
          else if (folios >= 11000) pricePerUnit = 0.48;
          else if (folios >= 10000) pricePerUnit = 0.49;
          else if (folios >= 9000) pricePerUnit = 0.65;
          else if (folios >= 8000) pricePerUnit = 0.8;
          else if (folios >= 7000) pricePerUnit = 0.96;
          else if (folios >= 6000) pricePerUnit = 1.12;
          else if (folios >= 5000) pricePerUnit = 1.27;
          else if (folios >= 4000) pricePerUnit = 1.43;
          else if (folios >= 3000) pricePerUnit = 1.59;
          else if (folios >= 2000) pricePerUnit = 1.74;
          else pricePerUnit = 1.9; // 1000 folios

          const totalPrice = folios * pricePerUnit;

          foliosAmount.textContent = folios.toLocaleString();
          pricePerFolio.textContent = pricePerUnit.toFixed(2);
          resultFolios.textContent = folios.toLocaleString();
          resultPrice.textContent = `$${totalPrice.toLocaleString("es-MX", { minimumFractionDigits: 2 })}`;
        }

        slider.addEventListener("input", updateCalculation);
        updateCalculation(); // Initial calculation
