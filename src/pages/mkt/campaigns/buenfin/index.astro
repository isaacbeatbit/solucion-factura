    <script>
      (function () {
        const MODAL_ID = "sfTarifasModal";
        const OVERLAY_ID = "sfTarifasOverlay";
        const CLOSE_ID = "sfTarifasClose";
        const STORAGE_KEY = "sf_tarifas2025_dismissed_until";

        const showBetweenDates = true; // <- Si quieres que aparezca solo en rango de fechas
        const start = new Date("2025-11-10T00:00:00"); // desde
        const end = new Date("2025-11-17T23:59:59"); // hasta
        const now = new Date();

        function inRange() {
          if (!showBetweenDates) return true;
          return now >= start && now <= end;
        }

        function shouldShow() {
          try {
            const until = localStorage.getItem(STORAGE_KEY);
            if (until && new Date(until) > now) return false;
          } catch (e) {}
          return inRange();
        }

        function openModal() {
          const m = document.getElementById(MODAL_ID);
          const o = document.getElementById(OVERLAY_ID);
          if (!m || !o) return;
          o.style.display = "block";
          m.style.display = "flex";
          // anima
          requestAnimationFrame(() => m.classList.add("show"));
          // focus
          const closeBtn = document.getElementById(CLOSE_ID);
          closeBtn && closeBtn.focus();
          // cerrar por overlay/ESC
          o.addEventListener("click", closeModal);
          document.addEventListener("keydown", escClose);
        }

        function closeModal() {
          const m = document.getElementById(MODAL_ID);
          const o = document.getElementById(OVERLAY_ID);
          if (!m || !o) return;
          m.classList.remove("show");
          setTimeout(() => {
            m.style.display = "none";
            o.style.display = "none";
          }, 200);
          // no mostrar por 7 d√≠as
          try {
            const until = new Date(Date.now() + 7 * 24 * 60 * 60 * 1000);
            localStorage.setItem(STORAGE_KEY, until.toISOString());
          } catch (e) {}
          document.removeEventListener("keydown", escClose);
        }

        function escClose(e) {
          if (e.key === "Escape") closeModal();
        }

        function init() {
          const closeBtn = document.getElementById(CLOSE_ID);
          closeBtn && closeBtn.addEventListener("click", closeModal);
          if (shouldShow()) {
            // abre con leve retraso para no ser intrusivo
            setTimeout(openModal, 900);
          }
        }

        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", init);
        } else {
          init();
        }
      })();
    </script>
