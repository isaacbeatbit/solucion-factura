<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Desktop accordion functionality
    const btn = document.getElementById("ver-caracteristicas");
    const tabla = document.getElementById("tabla-caracteristicas");

    if (btn && tabla) {
      btn.addEventListener("click", function () {
        tabla.classList.toggle("expanded");
      });
    }

    // Mobile tabs functionality
    const planTabs = document.querySelectorAll(".plan-tab");
    const planContents = document.querySelectorAll(".plan-content");

    planTabs.forEach((tab) => {
      tab.addEventListener("click", function () {
        const planId = tab.getAttribute("data-plan");

        planTabs.forEach((t) => t.classList.remove("active"));
        planContents.forEach((c) => c.classList.remove("active"));

        tab.classList.add("active");
        const targetContent = document.getElementById(`plan-${planId}`);
        if (targetContent) {
          targetContent.classList.add("active");
        }
      });
    });
  });
</script>
