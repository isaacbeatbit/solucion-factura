---
// CompaniesBar.astro - Barra de empresas clientes para credibilidad
---

<section class="companies-bar">
  <div class="container">
    <div class="companies-header">
      <h3 class="companies-title">Empresas que confían en nosotros</h3>
      <p class="companies-subtitle">
        Más de 2,500+ empresas ya utilizan nuestros servicios
      </p>
    </div>

    <div class="companies-carousel">
      <div class="companies-track">
        <!-- Primera fila de empresas -->
        <img src="/logos/autozone.svg" alt="AutoZone" class="company-logo" />
        <img src="/logos/bimbo.svg" alt="Grupo Bimbo" class="company-logo" />
        <img
          src="/logos/constructora.svg"
          alt="Constructora"
          class="company-logo"
        />
        <img src="/logos/manpower.svg" alt="Manpower" class="company-logo" />
        <img src="/logos/autozone.svg" alt="AutoZone" class="company-logo" />
        <img src="/logos/bimbo.svg" alt="Grupo Bimbo" class="company-logo" />
        <img
          src="/logos/constructora.svg"
          alt="Constructora"
          class="company-logo"
        />
        <img src="/logos/manpower.svg" alt="Manpower" class="company-logo" />

        <!-- Duplicado para animación infinita -->
        <img src="/logos/autozone.svg" alt="AutoZone" class="company-logo" />
        <img src="/logos/bimbo.svg" alt="Grupo Bimbo" class="company-logo" />
        <img
          src="/logos/constructora.svg"
          alt="Constructora"
          class="company-logo"
        />
        <img src="/logos/manpower.svg" alt="Manpower" class="company-logo" />
      </div>
    </div>

    <!-- Estadísticas de confianza -->
    <div class="trust-stats">
      <div class="stat-item">
        <span class="stat-number">2,500+</span>
        <span class="stat-label">Empresas activas</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">15M+</span>
        <span class="stat-label">Facturas procesadas</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">99.9%</span>
        <span class="stat-label">Tiempo de actividad</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">24/7</span>
        <span class="stat-label">Soporte técnico</span>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .companies-bar {
    padding: 60px 0;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-light);
    overflow: hidden;

    [data-theme="light"] & {
      background: var(--bg-tertiary);
    }
  }

  .companies-header {
    text-align: center;
    margin-bottom: 3rem;

    .companies-title {
      font-size: clamp(1.5rem, 3vw, 2rem);
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .companies-subtitle {
      font-size: 1rem;
      color: var(--text-secondary);
      margin: 0;
    }
  }

  .companies-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding-top: 10px;
    mask: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .companies-track {
    display: flex;
    animation: scroll-companies 40s linear infinite;
    gap: 3rem;
    width: calc(200% + 6rem);

    &:hover {
      animation-play-state: paused;
    }
  }

  .company-logo {
    flex-shrink: 0;
    max-height: 42px;
    max-width: 120px;
    width: auto;
    height: auto;
    object-fit: contain;
    opacity: 0.8;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    margin: 0 1.5rem;

    &:hover {
      opacity: 1;
      transform: scale(1.1);
    }

    // Ajuste específico para el logo de AutoZone que es muy horizontal
    &[src="/logos/autozone.svg"] {
      max-width: 90px;
      max-height: 34px;
    }
  }

  @keyframes scroll-companies {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .trust-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-light);

    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  .stat-item {
    text-align: center;
    padding: 1rem;

    .stat-number {
      display: block;
      font-size: clamp(1.5rem, 3vw, 2rem);
      font-weight: 700;
      color: var(--secondary);
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.9rem;
      color: var(--text-secondary);
      font-weight: 500;
    }
  }

  // Responsive adjustments
  @media (max-width: 768px) {
    .companies-bar {
      padding: 40px 0;
    }

    .companies-header {
      margin-bottom: 2rem;
    }

    .companies-track {
      gap: 1.5rem;
    }

    .company-logo {
      max-height: 34px;
      max-width: 100px;
      margin: 0 1rem;

      &[src="/logos/autozone.svg"] {
        max-width: 78px;
        max-height: 26px;
      }
    }
  }

  // Reduced motion support
  @media (prefers-reduced-motion: reduce) {
    .companies-track {
      animation: none;
    }
  }

  // Print styles
  @media print {
    .companies-bar {
      display: none;
    }
  }

  // High contrast mode
  @media (prefers-contrast: high) {
    .company-logo {
      opacity: 1;
    }
  }
</style>
