---
// CompaniesBar.astro - Barra de empresas clientes para credibilidad
---

<section class="companies-bar">
  <div class="container">
    <div class="companies-header">
      <h3 class="companies-title">Empresas que confían en nosotros</h3>
      <p class="companies-subtitle">
        Más de 2,500+ empresas ya utilizan nuestros servicios
      </p>
    </div>

    <div class="companies-grid">
      <img src="/logos/autozone.svg" alt="AutoZone" class="company-logo" />
      <img src="/logos/fuelex.svg" alt="Fuelex" class="company-logo" />
      <img
        src="/logos/constructora.svg"
        alt="Constructora"
        class="company-logo"
      />
      <img src="/logos/manpower.svg" alt="Manpower" class="company-logo" />
      <img src="/logos/spinmaster.png" alt="Spinmaster" class="company-logo" />
    </div>

    <!-- Estadísticas de confianza -->
    <div class="trust-stats">
      <div class="stat-item">
        <span class="stat-number">2,500+</span>
        <span class="stat-label">Empresas activas</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">15M+</span>
        <span class="stat-label">Facturas procesadas</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">99.9%</span>
        <span class="stat-label">Tiempo de actividad</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">24/7</span>
        <span class="stat-label">Soporte técnico</span>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .companies-bar {
    padding: 3rem 0;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-light);
    overflow: hidden;

    @media (max-width: 768px) {
      padding: 2rem 0;
    }

    @media (max-width: 480px) {
      padding: 1.5rem 0;
    }

    [data-theme="light"] & {
      background: var(--bg-tertiary);
    }
  }

  .companies-header {
    text-align: center;
    margin-bottom: 2rem;

    @media (max-width: 768px) {
      margin-bottom: 1.5rem;
    }

    @media (max-width: 480px) {
      margin-bottom: 1.25rem;
    }

    .companies-title {
      font-size: clamp(1.5rem, 3vw, 2rem);
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .companies-subtitle {
      font-size: 1rem;
      color: var(--text-secondary);
      margin: 0;
    }
  }

  .companies-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    flex-wrap: wrap;
    padding: 2rem 0;
    width: 100%;
    text-align: center;
  }

  .company-logo {
    flex-shrink: 0;
    max-height: 50px;
    max-width: 140px;
    width: auto;
    height: auto;
    object-fit: contain;
    opacity: 0.8;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;

    &:hover {
      opacity: 1;
      transform: scale(1.05);
    }

    // Ajuste específico para el logo de AutoZone que es muy horizontal
    &[src="/logos/autozone.svg"] {
      max-width: 110px;
      max-height: 40px;
    }
  }

  .trust-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-light);

    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
      margin-top: 1.5rem;
      padding-top: 1.25rem;
    }

    @media (max-width: 480px) {
      gap: 1rem;
      margin-top: 1.25rem;
      padding-top: 1rem;
    }
  }

  .stat-item {
    text-align: center;
    padding: 1rem;

    .stat-number {
      display: block;
      font-size: clamp(1.5rem, 3vw, 2rem);
      font-weight: 700;
      color: var(--secondary);
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.9rem;
      color: var(--text-secondary);
      font-weight: 500;
    }
  }

  // Responsive adjustments
  @media (max-width: 768px) {
    .companies-grid {
      gap: 1.5rem;
      justify-content: center;
      align-items: center;
    }

    .company-logo {
      max-height: 42px;
      max-width: 120px;

      &[src="/logos/autozone.svg"] {
        max-width: 95px;
        max-height: 32px;
      }
    }
  }

  // Reduced motion support
  @media (prefers-reduced-motion: reduce) {
    .company-logo {
      transition: none;
    }
  }

  // Print styles
  @media print {
    .companies-bar {
      display: none;
    }
  }

  // High contrast mode
  @media (prefers-contrast: high) {
    .company-logo {
      opacity: 1;
    }
  }
</style>
