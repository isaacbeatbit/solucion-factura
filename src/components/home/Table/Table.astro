          <thead>
            <tr class="bg-bg-primary-light dark:bg-bg-primary/70">
              <th
                class="sticky left-0 z-20 bg-bg-primary-light dark:bg-bg-primary/70 text-text-primary-light dark:text-text-primary font-bold p-6 text-left border-b-2 border-border-light-mode dark:border-border-light w-[280px]"
