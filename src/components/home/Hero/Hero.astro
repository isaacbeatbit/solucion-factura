<section
  id="inicio"
  class="py-16 md:py-20 lg:py-24 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-[#0c1221] dark:to-[#141b2d] relative overflow-hidden transition-[background] duration-300 ease-in-out before:content-[''] before:absolute before:-top-1/2 before:-right-1/5 before:w-[1000px] before:h-[1000px] before:bg-[radial-gradient(circle,rgba(26,109,204,0.05)_0%,transparent_70%)] before:rounded-full"
>
  <div class="w-full max-w-[1600px] mx-auto">
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-5 lg:gap-6 items-center"
    >
      <!-- Columna de texto con padding lateral -->
      <div class="relative z-[2] px-4 sm:px-6 md:px-8 lg:px-10">
        <div
          class="inline-flex items-center gap-2 bg-blue-100 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 px-5 py-2.5 rounded-full text-base font-semibold mb-4 border border-blue-200 dark:border-blue-800"
        >
          ‚ú® La soluci√≥n m√°s completa
        </div>

        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight mb-4 text-gray-900 dark:text-white"
        >
          Facturaci√≥n electr√≥nica f√°cil, r√°pida y confiable
        </h1>

        <p
          class="text-base md:text-lg lg:text-xl leading-relaxed text-gray-700 dark:text-gray-300 mb-6 max-w-2xl"
        >
          Sistema completo de facturaci√≥n CFDI 4.0 con conciliaci√≥n bancaria,
          env√≠o por WhatsApp y todas las herramientas que necesitas para tu
          negocio.
        </p>

        <div class="flex gap-4 flex-wrap">
          <a
            href="https://app.solucionfactura.mx/register"
            class="inline-flex items-center gap-2 px-8 py-4 rounded-xl font-bold no-underline transition-all duration-200 ease-in-out border-none cursor-pointer text-base md:text-lg bg-gradient-to-br from-blue-500 to-blue-600 text-white shadow-lg hover:-translate-y-1 hover:shadow-xl focus:outline-2 focus:outline-blue-600 focus:outline-offset-2"
          >
            üöÄ Prueba Gratis
          </a>
          <a
            href="#caracteristicas"
            class="inline-flex items-center gap-2 px-8 py-4 rounded-xl font-bold no-underline transition-all duration-200 ease-in-out cursor-pointer text-base md:text-lg bg-transparent text-gray-900 dark:text-white border-2 border-gray-900 dark:border-white hover:bg-gray-900/10 dark:hover:bg-white/10 hover:-translate-y-1 hover:shadow-lg focus:outline-2 focus:outline-blue-600 focus:outline-offset-2"
          >
            Ver Caracter√≠sticas
          </a>
        </div>
      </div>

      <!-- Columna de video que se extiende hasta el borde -->
      <div
        class="relative flex justify-center items-center mt-6 md:mt-0 md:pr-0"
      >
        <div
          data-video-container
          class="relative w-full aspect-video md:rounded-none overflow-hidden cursor-pointer shadow-text-text-secondary-light dark:text-text-secondary"
        >
          <!-- Thumbnail que se muestra inicialmente -->
          <picture>
            <source srcset="/thumbnail.webp" type="image/webp" />
            <img
              src="/thumbnail.webp"
              alt="Dashboard del sistema Soluci√≥n Factura - Vista de reportes y estad√≠sticas"
              data-video-thumbnail
              class="w-full h-full object-cover md:rounded-none transition-opacity duration-500"
              width="650"
              height="365"
              loading="eager"
            />
          </picture>

          <!-- Video que se carga despu√©s -->
          <video
            src="/sf-video.mp4"
            data-hero-video
            class="w-full h-full object-cover md:rounded-none transition-opacity duration-500"
            width="650"
            height="365"
            muted
            loop
            playsinline
            preload="none"
            style="display: none; opacity: 0;"
          >
            Tu navegador no soporta el video.
          </video>

          <!-- Bot√≥n de play opcional -->
          <div
            data-play-button
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-black/70 rounded-full w-16 h-16 flex items-center justify-center transition-all duration-300 backdrop-blur-[10px] hover:bg-black/80 hover:scale-110"
            aria-label="Reproducir video"
          >
            <svg width="32" height="32" viewBox="0 0 24 24" fill="white">
              <path d="M8 5v14l11-7z"></path>
            </svg>
          </div>
        </div>

        <style>
          [data-video-container][data-playing] [data-play-button] {
            opacity: 0;
            pointer-events: none;
          }
        </style>

        <script>
          document.addEventListener("DOMContentLoaded", function () {
            const container = document.querySelector("[data-video-container]");
            const thumbnail = document.querySelector("[data-video-thumbnail]");
            const video = document.querySelector("[data-hero-video]");
            const playButton = document.querySelector("[data-play-button]");

            // Auto-cargar video cuando sea visible
            const observer = new IntersectionObserver(
              (entries) => {
                entries.forEach((entry) => {
                  if (entry.isIntersecting) {
                    // Pre-cargar video en background
                    video.preload = "auto";
                    video.load();
                    observer.unobserve(container);
                  }
                });
              },
              {
                threshold: 0.1,
                rootMargin: "100px",
              },
            );

            observer.observe(container);

            // Funci√≥n para iniciar video
            function startVideo() {
              container.setAttribute("data-playing", "");
              video.style.display = "block";

              video
                .play()
                .then(() => {
                  // Transici√≥n suave de thumbnail a video
                  setTimeout(() => {
                    video.style.opacity = "1";
                    thumbnail.style.opacity = "0";
                  }, 100);

                  // Ocultar thumbnail despu√©s de la transici√≥n
                  setTimeout(() => {
                    thumbnail.style.display = "none";
                  }, 600);
                })
                .catch(() => {
                  // Si falla el autoplay, mostrar solo el bot√≥n
                  console.log("Autoplay bloqueado");
                });
            }

            // Click en cualquier parte del contenedor inicia el video
            container.addEventListener("click", startVideo);

            // Tambi√©n auto-iniciar despu√©s de que el video est√© cargado
            video.addEventListener("canplaythrough", () => {
              // Auto-iniciar solo si est√° visible
              const rect = container.getBoundingClientRect();
              const isVisible =
                rect.top < window.innerHeight && rect.bottom > 0;

              if (isVisible) {
                setTimeout(startVideo, 1000); // Esperar 1 segundo despu√©s de cargar
              }
            });
          });
        </script>
      </div>
    </div>
  </div>
</section>
